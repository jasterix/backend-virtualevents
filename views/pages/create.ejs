<div class="jumbotron text-center">
  <h1>Add an event</h1>
</div>
<div class="row form">
  <div class="col-sm-6 col-sn-off-3">
    <form action="new" method="post">
      <div class="form-group">
        <label>Title</label>
        <input type="text" name="title" class="form-control" />
      </div>

      <div class="form-group">
        <label>Start Date</label>
        <input type="datetime" name="startDate" class="form-control" />
      </div>
      <div class="form-group">
        <label>End Date</label>
        <input type="datetime-local" name="EndDate" class="form-control" />
      </div>
      <div class="form-group">
        <label>Description</label>
        <textarea
          type="text"
          name="description"
          class="form-control"
        ></textarea>
      </div>
      <div class="form-group check">
        <label>Black Tech?</label>
        <input type="checkbox" name="blackTech" class="form-control" />
      </div>

      <div class="form-group check">
        <label>Tech Women?</label>
        <input type="checkbox" name="techWomen" class="form-control" />
      </div>

      <div class="form-group check">
        <label>Free?</label>
        <input
          type="checkbox"
          checked="true"
          name="free"
          class="form-control"
        />
      </div>

      <div class="form-group">
        <button type="submit" class="btn btn-success btn-lg">
          Add new event
        </button>
      </div>
    </form>
  </div>
</div>
